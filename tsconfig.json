{
  "compilerOptions": {
    // Allow checking JavaScript files
    "allowJs": true,
    // I mean, check JavaScript files for real
    "checkJs": true,
    // Do not generate any output files
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2019",
      "DOM"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "node_modules/@types"
    ],
    "types": [
        /*"jquery",
        "jqueryui",*/
        "node"
    ]
  }
}